{
  "name": "wamya",
  "version": "0.0.6",
  "description": "This is a simple utility package",
  "author": "Marouen Mhiri",
  "license": "Apache-2.0",
  "homepage": "www.marouen-mhiri.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/marujah/wamya.git"
  },
  "bugs": {
    "url": "https://github.com/marujah/wamya/issues"
  },
  "keywords": [
    "state management",
    "localStorage",
    "events",
    "micro-frontend",
    "web components"
  ],
  "type": "module",
  "main": "./dist/wamya.umd.cjs",
  "module": "./dist/wamya.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/wamya.js",
      "require": "./dist/wamya.umd.cjs"
    }
